{
  "name": "nft",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "lint": "npm run eslint && npm run prettier -- --check && npm run lint -ws --if-present",
    "lint:fix": "npm run eslint -- --fix && npm run prettier -- --write",
    "clean": "npm run clean -ws --if-present",
    "eslint": "eslint \"**/*.{ts,tsx}\"",
    "prettier": "prettier \"**/*.{ts,tsx,json,md}\"",
    "test": "npm run test -ws --if-present",
    "postinstall": "npm run graphql-codegen",
    "build": "npm run build -ws --if-present",
    "watch": "npm run build && concurrently -n email-connector,hooks --kill-others \"npm run watch -w packages/email-connector\" \"npm run watch -w packages/hooks\"",
    "graphql-codegen": "npm run graphql-codegen -ws --if-present",
    "prerelease": "lerna publish $VERSION --no-private --force-publish --dist-tag latest --sync-workspace-lock --no-git-tag-version --yes"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@graphql-codegen/add": "^3.0.0",
    "@lerna-lite/cli": "^1.9.1",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.31.1",
    "concurrently": "^7.3.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "eslint-plugin-unused-imports": "^1.1.1",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "turbo": "^1.5.6",
    "typescript": "^4.3.4"
  }
}
